@model ModelDomainDoc.Models.Document
@{
    ViewBag.Title = "Item";
}

<tr>
    <th>
        @Html.DisplayFor(model => model.ShotName)
    </th>
    <th>
        @Html.DisplayFor(model => model.Autor.FullName)
    </th>
    <th>
        @Html.DisplayFor(model => model.Date)
    </th>
    <th>
        @Html.ActionLink("Открыть файл", "OpenFile", new { filePath = Model.BinaryFile, fileName = Model.Name })
    </th>
    <th></th>
</tr>

